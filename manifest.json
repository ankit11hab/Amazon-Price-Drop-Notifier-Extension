{
  "manifest_version": 2,
  "name": "Background Changer",
  "version": "1.0.0",
  "content_scripts": 
  [
    {
      "matches": ["<all_urls>"],
      "js" : ["content.js"]
    }
  ],
  "background":
  {
    "scripts":["background.js"]
  },
  "description": "Does stuff with the background.",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "permissions": ["tabs", "activeTab"]
}